{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "sourceMap": true,
    "inlineSourceMap": true,

    "removeComments": false,
    "noEmit": true,
    "importHelpers": true,

    "strict": true,

    "moduleResolution": "node",
    "baseUrl": "../",
    
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "jsx": "preserve",

    "typeRoots": [
      "../node_modules/@types",
      "./@types"
    ]
  }
}